{
  "extends":"./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": ".extension",
    "noEmit": false,
    "module": "ES6",
    "target": "ES6",
    "lib": ["es2015", "dom"],
    "isolatedModules": false
  },
  "include": [
    "extension/**/*.ts",
    "extension/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
